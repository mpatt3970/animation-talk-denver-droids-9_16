<?xml version="1.0" encoding="utf-8"?>
<person.mpatterson.animationtalk.widget.BaseLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="200dp">

        <TextView
            style="@style/HeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durations"/>

        <TextView
            style="@style/SmallerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="android.R.integer.config_shortAnimTime (200 ms)" />

        <View
            android:id="@+id/short_ball_anim"
            android:layout_width="@dimen/white_ball_size"
            android:layout_height="@dimen/white_ball_size"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_ball" />

        <TextView
            style="@style/SmallerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="android.R.integer.config_mediumAnimTime (400 ms)" />

        <View
            android:id="@+id/medium_ball_anim"
            android:layout_width="@dimen/white_ball_size"
            android:layout_height="@dimen/white_ball_size"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_ball" />

        <TextView
            style="@style/SmallerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="500 ms - android.R.integer.config_longAnimTime" />

        <View
            android:id="@+id/long_ball_anim"
            android:layout_width="@dimen/white_ball_size"
            android:layout_height="@dimen/white_ball_size"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_ball" />

    </LinearLayout>

</person.mpatterson.animationtalk.widget.BaseLayout>